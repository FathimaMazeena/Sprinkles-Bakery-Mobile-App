<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminOders">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppins_bold"
            android:text="WELCOME"
            android:textColor="@color/titleColor"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins"
            android:text="Choose what to do!"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="@+id/welcomeTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcomeTextView" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/containerColor"
            app:cardCornerRadius="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Order ID"
                        android:textColor="@color/listViewColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextText3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_boxes"
                        android:clickable="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textColor="@color/backgroundColor" />


                </TableRow>


                <TableRow>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Customer ID"
                        android:textColor="@color/listViewColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextText6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_boxes"
                        android:clickable="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textColor="@color/backgroundColor" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Customer Name"
                        android:textColor="@color/listViewColor"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/editTextText7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_boxes"
                        android:clickable="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textColor="@color/backgroundColor" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Order Address"
                        android:textColor="@color/listViewColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextText8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_boxes"
                        android:clickable="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textColor="@color/backgroundColor" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Order Items"
                        android:textColor="@color/listViewColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextText9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_boxes"
                        android:clickable="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textColor="@color/backgroundColor" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Total Amount"
                        android:textColor="@color/listViewColor"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextText10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="2"
                        android:background="@drawable/edit_text_boxes"
                        android:clickable="true"
                        android:ems="10"
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="none"
                        android:textAlignment="center"
                        android:textColor="@color/backgroundColor" />
                </TableRow>


                <TableRow
                    android:layout_width="280dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center">


                    <!--<Button
                        android:id="@+id/button7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/buttonColor"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Delivery Completed"
                        android:textColor="@color/backgroundColor" />

                        -->

                </TableRow>
            </TableLayout>


        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/adminNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/navigationBarColor"
        app:menu="@menu/admin_navigation" />




</RelativeLayout>